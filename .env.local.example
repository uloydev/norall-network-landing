# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ==========================================
# Copy this file to .env and update values for local development

# ==========================================
# DATABASE (Local PostgreSQL)
# ==========================================
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=noral_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# ==========================================
# STRAPI SECRETS (Generate unique values)
# ==========================================
# For local dev, you can use these test values
# For production, ALWAYS generate new ones with: openssl rand -base64 32
APP_KEYS=testKey1,testKey2,testKey3,testKey4
API_TOKEN_SALT=test_api_token_salt_local_dev_only
ADMIN_JWT_SECRET=test_admin_jwt_secret_local_dev_only
TRANSFER_TOKEN_SALT=test_transfer_token_salt_local_dev_only
JWT_SECRET=test_jwt_secret_local_dev_only

# ==========================================
# STRAPI SERVER
# ==========================================
HOST=0.0.0.0
PORT=1337

# ==========================================
# FRONTEND (SvelteKit)
# ==========================================
# CMS_URL: Where SvelteKit server connects to Strapi (internal)
CMS_URL=http://localhost:1337

# PUBLIC_CMS_URL: Where browser connects to Strapi (external)
PUBLIC_CMS_URL=http://localhost:1337

# FRONTEND_URL: Your frontend domain
FRONTEND_URL=http://localhost:5173

# ==========================================
# NODE ENVIRONMENT
# ==========================================
NODE_ENV=development
