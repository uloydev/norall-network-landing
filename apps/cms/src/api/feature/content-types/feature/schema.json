{
  "kind": "collectionType",
  "collectionName": "features",
  "info": {
    "singularName": "feature",
    "pluralName": "features",
    "displayName": "Feature",
    "description": "Product or service features displayed on the landing page"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Features can be referenced in Features Section components"
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 100,
      "description": "Feature name or headline (3-100 characters)"
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500,
      "description": "Detailed explanation of the feature (10-500 characters)"
    },
    "icon": {
      "type": "string",
      "required": false,
      "maxLength": 50,
      "description": "Icon name or identifier (e.g., 'check', 'star', 'rocket'). Optional."
    },
    "order": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 999,
      "description": "Display order (lower numbers appear first, 0-999)"
    },
    "isHighlighted": {
      "type": "boolean",
      "default": false,
      "description": "Mark as a key feature to display prominently"
    }
  }
}
