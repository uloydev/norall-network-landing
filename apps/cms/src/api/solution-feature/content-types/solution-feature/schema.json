{
  "kind": "collectionType",
  "collectionName": "solution_features",
  "info": {
    "singularName": "solution-feature",
    "pluralName": "solution-features",
    "displayName": "Solution Feature",
    "description": "Key features or benefits of the solution"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Solution features displayed in grid layout"
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5,
      "maxLength": 150,
      "description": "Feature title (e.g., 'Ionic-Level Decomposition')"
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 10,
      "maxLength": 500,
      "description": "Feature description explaining the benefit"
    },
    "icon": {
      "type": "string",
      "required": false,
      "maxLength": 50,
      "description": "Icon name (e.g., 'atom', 'recycle', 'energy', 'shield'). Optional."
    },
    "backgroundColor": {
      "type": "enumeration",
      "enum": ["white", "light", "primary", "secondary", "accent"],
      "default": "white",
      "description": "Card background color"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 999,
      "description": "Display order in grid"
    }
  }
}
